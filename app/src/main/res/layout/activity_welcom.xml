<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomActivity"
    android:background="#F2EDAC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="82dp"
            android:text="Welcome to Ngila"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#212121"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Select Your Account Type And Let's Get Started"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"/>
        <RadioGroup
            android:checkedButton="@+id/accPassenger"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <RadioButton

                android:id="@+id/accPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger"/>
            <RadioButton
                android:id="@+id/accDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver"/>
            <RadioButton
                android:id="@+id/accCarOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Owner"/>
        </RadioGroup>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="bottom">
    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_margin="8dp"
        />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_margin="8dp"
        style="?attr/materialButtonOutlinedStyle"
        />
</LinearLayout>


</FrameLayout>